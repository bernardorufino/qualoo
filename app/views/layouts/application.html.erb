<!DOCTYPE html>
<html>
<head>
  <title>Qualoo<%= title :prefix => " | " %></title>
  <link rel="shortcut icon" href="<%= asset_path "favicon.ico" %>" />
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= page %>">

<div id="header">
	<h1><%= link_to "Qualoo", root_path %></h1>
	<ul id="main-actions">
		<% if logged_in? %>
			<li><%= current_user.name %></li>
			<li><%= link_to "Meu Perfil", user_path(current_user) %></li>
			<li><%= link_to "Mensagens", messages_path %></li>
			<li><%= link_to "Painel de Controle", page_path(:dashboard) %></li>
			<li><%= link_to "Sair", logout_path %></li>	
		<% else %>
			<li><%= link_to "Entrar", login_path %></li>
			<li><%= link_to "Cadastro", new_user_path %></li>
		<% end %>
	</ul>
	<!--<ul id="network">
		<li><a id="twitter" href="#twitter">Twitter</a></li>
		<li><a id="facebook" href="#facebook">Facebook</a></li>
		<li><a id="orkut" href="#orkut">Orkut</a></li>
	</ul>-->
</div>
<div id="nav">
	<ul class="inline">
		<li><%= link_to "Gêneros de Produtos", categories_path %></li> | 
		<li><%= link_to "Marcas", companies_path %></li> | 
		<li><%= link_to "Profissional", salespeople_path %></li> | 
		<li><%= link_to "Clientes", consumers_path %></li>
	</ul>
</div>

<%= main do %>
	<%= sidebar do %> 
		<%= render :partial => "layouts/sidebar" %>
	<% end %>
	<div id="content">
		<% if title? %>
			<h2><%= title %></h2>
		<% end %>
		<%= before_flash %>
		<%= flash_msgs %>
		<%= yield %>
	</div>
	<div class="clear"></div>
</div>
<div id="footer">
	<p><strong>Qualoo</strong></p>
	<p>
		<%= link_to "Benefícios para sua Empresa", page_path(:benefits) %><br />
		<%= link_to "Espaço Cliente", page_path(:consumer) %> | 
		<%= link_to "Espaco Profissional", page_path(:salesperson) %><br />
		<%= link_to "Sobre", page_path(:about) %> | 
		<%= link_to "Termos de uso", page_path(:terms) %> | 
		<%= link_to "Contato", page_path(:contact) %>
	</p>
<% end %>

</body>
</html>
